<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>No. Rekening</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i<bank.length ; i++){ %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= bank[i].name %></td>
          <td><%= bank[i].bankName %></td>
          <td><%= bank[i].noRekening %></td>
          <td class="row">

            <a href="/bank/edit/<%= bank[i].id %>" class="btn btn-warning">
              <i class="nav-icon fas fa-pencil-alt"></i>
              Ubah
            </a>
            &nbsp;
            <form action="/bank/delete/<%= bank[i].id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger">
                <i class="nav-icon fas fa-trash"></i>
                Hapus
              </button>
            </form>
          </td>
        </tr>
      <%}%>
    </tbody>
  </table>